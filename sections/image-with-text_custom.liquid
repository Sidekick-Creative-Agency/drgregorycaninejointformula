{% style %}
.video-modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: .2s ease;
}
.video-modal-container.open {
  opacity: 1;
  visibility: visible;
  z-index: 999999;
}
.video-container {
  padding-bottom: 56.25%;
  width: 75%;
  height: 0;
  position: relative;
}
.video-container .video {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: none;
  box-shadow: none;
}
.video-modal-close {
  position: absolute;
  top: 2rem;
  right: 2rem;
  width: 2rem;
  height: 2rem;
  border: 1px solid transparent;
  transition: .2s ease;
}
.video-modal-close svg {
  color: #FFFFFF;
  fill: #FFFFFF;
}
.video-modal-close:hover,
.video-modal-close:focus,
.video-modal-close:focus-visible {
  border: 1px solid #ffffff;
}
.image-text-section {
  padding: {{section.settings.padding}}px;
}
@media screen and (max-width: 989px) {
.image-text-section {
  padding: {{section.settings.padding_mb}}px;
}
}

{% endstyle %}


