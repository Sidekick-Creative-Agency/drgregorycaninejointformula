    </div>
    <div class="video-modal-close" tabindex="0">
      {% render 'icon-close' %}
    </div>
  </div>
  <script>

               
                    document.querySelector('.video-modal-button').addEventListener('click', function() {
                      if (document.querySelector('.video-modal-container').classList.contains('open')) {
                        document.querySelector('.video-modal-container').classList.remove('open');
                      } else {
                        document.querySelector('.video-modal-container').classList.add('open');
                      }
                    })
                    document.querySelector('.video-modal-close').addEventListener('click', function() {
                        document.querySelector('.video-modal-container').classList.remove('open');
                    })
                    document.querySelector('.video-modal-close').addEventListener('keypress', function(event) {
                      if (event.key === 'Enter') {
                        event.preventDefault();
                        document.querySelector('.video-modal-close').click();
                      }
                    })
                    document.querySelector('.video-modal-button').addEventListener('keypress', function(event) {
                      if (event.key === 'Enter') {
                        event.preventDefault();
                        document.querySelector('.video-modal-button').click();
                      }
                    })

                  </script>
