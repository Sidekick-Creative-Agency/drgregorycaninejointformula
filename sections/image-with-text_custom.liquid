{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign scheme1 = settings.color_schemes | first %}
<div class="image-text-section" style="background-color: {{section.settings.bg_color}}; padding: {{section.settings.padding}}px">
  <div class="image-text-container">
    <div class="image-text-image-container">
      
      <img class="image-text-image" src="{{section.settings.image | image_url}}" {% if section.settings.show_bg_circle %} style="border-bottom-right-radius: 50%; border-bottom-left-radius: 50%" {% endif %}/>
      {%- if section.settings.show_bg_circle -%}
        <div class="image-text-circle-bg" style="background-color: {{section.settings.circle_bg_color}}"></div>
      {%- endif -%}
    </div>
  </div>
</div>

